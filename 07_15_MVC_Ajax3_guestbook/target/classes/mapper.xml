<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- mapper가 여러개 일때 namespace 로 구분한다. -->
<mapper namespace="guestbook">
	<select id="allList" resultType="com.ict.vo.VO">
		select * from guestbook order by
		idx
	</select>

	<select id="select" resultType="com.ict.vo.VO"
		parameterType="String">
		select * from guestbook where idx = #{idx}
	</select>

	<insert id="insert" parameterType="com.ict.vo.VO">
		insert into guestbook values
		(members_seq.nextval,
		#{name},#{subject},#{content},#{email},#{pwd},sysdate)
	</insert>

	<delete id="delete" parameterType="String">
		delete from guestbook where
		idx =#{idx}
	</delete>

	<update id="update" parameterType="com.ict.vo.VO">
		update guestbook set
		name=#{name}, subject=#{subject}, content=#{content}, email=#{email}
		where idx=#{idx}
	</update>
</mapper>







